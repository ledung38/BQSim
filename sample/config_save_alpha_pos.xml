<?xml version="1.0" encoding="UTF-8"?>
<BSim_Config>
<!--
	start_date="20180101" end_date="20240820"
-->
  <Params
    data_dir="./data"
    start_date="20180101" end_date="20240820"
    back_days="100"
	interval="daily"
	daily_start_time="000000"
	delay="1"
  />
  
  <DataPool>
	<Data id="BaseData" 
		processor="[LOCAL_PATH]/BSim/pysim/data_loader/binance_base_data_loader_v2.py" 
		field_map="open=2 high=3 low=4 close=5 volume=6"
		data_period="1h"
		data_path="[LOCAL_PATH]/data/binance/new_daily/data"
	/>

	<Data id="ALL" processor="[LOCAL_PATH]/BSim/pysim/data_loader/top_liquid_univ.py" days="20" min_adv="1e6"/>
	<Data id="Return" processor="[LOCAL_PATH]/BSim/pysim/data_loader/dl_return.py" days="1"/>
	<Data id="Return7" processor="[LOCAL_PATH]/BSim/pysim/data_loader/dl_return.py" days="7"/>

	
  </DataPool>
  <Simulation num_threads="1" >

    <TradeModules>
    	<Trade id="trade_at_close" processor="[LOCAL_PATH]/BSim/pysim/trade/tradesimple.py"  output_dir="pnl" />
		<Trade id="save_alpha_pos" processor="[LOCAL_PATH]/BSim/pysim/trade/save_alpha_pos.py"  output_dir="./pos" file_format="0"/>
    </TradeModules>

    <AlphaModules>

		<Alpha id="alpha1" processor="[LOCAL_PATH]/BSim/pysim/alphas/alpha_ta1.py" universe="ALL" booksize="1e6"
				days="7" mode="0"
				>
			<Transforms>
				<Transform processor="[LOCAL_PATH]/BSim/pysim/transformers/alpha_neutralize.py"  mode="0"/>
			</Transforms>
		</Alpha>
	
		<Alpha id="alpha2" processor="[LOCAL_PATH]/BSim/pysim/alphas/alpha_ta1.py" universe="ALL" booksize="1e6"
				days="14" mode="0"
				>
			<Transforms>
				<Transform processor="[LOCAL_PATH]/BSim/pysim/transformers/alpha_neutralize.py"  mode="0"/>
			</Transforms>
		</Alpha>
		
		<Alpha id="alpha3" processor="[LOCAL_PATH]/BSim/pysim/alphas/alpha_ta1.py" universe="ALL" booksize="1e6"
				days="30" mode="0"
				>
			<Transforms>
				<Transform processor="[LOCAL_PATH]/BSim/pysim/transformers/alpha_neutralize.py"  mode="0"/>
			</Transforms>
		</Alpha>
		
		<Alpha id="alpha4" processor="[LOCAL_PATH]/BSim/pysim/alphas/alpha_ta1.py" universe="ALL" booksize="1e6"
				days="7" mode="1"
				>
			<Transforms>
				<Transform processor="[LOCAL_PATH]/BSim/pysim/transformers/alpha_neutralize.py"  mode="0"/>
			</Transforms>
		</Alpha>
		
		<Alpha id="alpha5" processor="[LOCAL_PATH]/BSim/pysim/alphas/alpha_ta1.py" universe="ALL" booksize="1e6"
				days="14" mode="1"
				>
			<Transforms>
				<Transform processor="[LOCAL_PATH]/BSim/pysim/transformers/alpha_neutralize.py"  mode="0"/>
			</Transforms>
		</Alpha>
		
		<Alpha id="alpha6" processor="[LOCAL_PATH]/BSim/pysim/alphas/alpha_ta1.py" universe="ALL" booksize="1e6"
				days="30" mode="1"
				>
			<Transforms>
				<Transform processor="[LOCAL_PATH]/BSim/pysim/transformers/alpha_neutralize.py"  mode="0"/>
			</Transforms>
		</Alpha>

		

		<!-- 
		
		<Alpha id="alpha1b" processor="[LOCAL_PATH]/BSim/pysim/alphas/alpha_from_pos.py" alpha_pos="./pos/alpha1" />
		<Alpha id="alpha2b" processor="[LOCAL_PATH]/BSim/pysim/alphas/alpha_from_pos.py" alpha_pos="./pos/alpha2" />
		<Alpha id="alpha3b" processor="[LOCAL_PATH]/BSim/pysim/alphas/alpha_from_pos.py" alpha_pos="./pos/alpha3" />
		<Alpha id="alpha4b" processor="[LOCAL_PATH]/BSim/pysim/alphas/alpha_from_pos.py" alpha_pos="./pos/alpha4" />
		<Alpha id="alpha5b" processor="[LOCAL_PATH]/BSim/pysim/alphas/alpha_from_pos.py" alpha_pos="./pos/alpha5" />
		<Alpha id="alpha6b" processor="[LOCAL_PATH]/BSim/pysim/alphas/alpha_from_pos.py" alpha_pos="./pos/alpha6" />

		
	 -->	
	
    </AlphaModules>

  </Simulation>

  
</BSim_Config>

